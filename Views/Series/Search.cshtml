@model SeriesList

<h2 class="searchResultHeader"> Series</h2>
<!-- List of series. -->
<!-- TODO trending as default when no search is made -->
<div class="container">
    <!-- Pagination controls -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage - 1 })">&lt;</a>
                    </li>
                }
                <li class="page-item disabled">
                    <span class="page-link">Page @Model.CurrentPage of @Model.TotalPages</span>
                </li>
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage + 1 })">&gt;</a>
                    </li>
                }
            </ul>
        </nav>
    }
    <div class="row">
        @if (Model.Series == null)
        {
            <p>Model is null.</p>
        }
        else if (Model.Series.Count == 0)
        {
            <p>No items found.</p>
        }
        else
        {
            @foreach (var item in Model.Series)
            {
                <div class="col-md-3 mb-4">

                    <a href="/Series/Index?seriesId=@item.Id">

                    <div class="card">

                            <img src="https://image.tmdb.org/t/p/w500/@item.PosterPath" class="card-img-top" onerror="this.onerror=null; this.src='https://upload.wikimedia.org/wikipedia/commons/f/fc/No_picture_available.png';">
                        <div class="card-body">
                           
                            
                                <h5 class="card-title">

                                    @item.OriginalName

                                </h5>
                                <p class="card-releasedate">@item.FirstAirDate</p>
                                <p class="card-rating"><strong>Rating:</strong> @item.VoteAverage / 10</p>
                            
                        </div>
                    </div>
                    </a>
                </div>
            }
        }
    </div>
    <!-- Pagination controls -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage - 1 })">&lt;</a>
                    </li>
                }
                <li class="page-item disabled">
                    <span class="page-link">Page @Model.CurrentPage of @Model.TotalPages</span>
                </li>
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage + 1 })">&gt;</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>