@model Person

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name - Person Details</title>
    <link rel="stylesheet" href="~/css/details.css">
</head>
<body>
    <div class="container">
        <div class="person-details">
            <!-- Display Profile Image -->
            <img src="https://image.tmdb.org/t/p/w500/@Model.ProfilePath" alt="@Model.Name" class="poster"
                 onerror="this.onerror=null; this.src='https://img.freepik.com/premium-vector/default-avatar-profile-icon-social-media-user-image-gray-avatar-icon-blank-profile-silhouette-vector-illustration_561158-3396.jpg';">

            <div class="info">
                <!-- Display Name -->
                <h1 class="name">@Model.Name</h1>

                <!-- Check and display 'AlsoKnownAs' (Ensure non-null) -->
                @if (Model.AlsoKnownAs != null && Model.AlsoKnownAs.Count > 0)
                {
                    <p class="tagline">
                        <strong>Also Known As:</strong>
                        @foreach (var alias in Model.AlsoKnownAs)
                        {
                            @alias
                            @if (alias != Model.AlsoKnownAs.Last())
                            {
                                <span>, </span>
                            }
                        }
                    </p>
                }

                <!-- Display Popularity -->
                @if (Model.Popularity > 0)
                {
                    <p><strong>Popularity:</strong> @Model.Popularity</p>
                }

                <!-- Display Place of Birth -->
                @if (!string.IsNullOrEmpty(Model.PlaceOfBirth))
                {
                    <p><strong>Place of Birth:</strong> @Model.PlaceOfBirth</p>
                }

                <!-- Display Gender -->
                @if (Model.Gender == 1)
                {
                    <p><strong>Gender:</strong> Female</p>
                }
                else if (Model.Gender == 2)
                {
                    <p><strong>Gender:</strong> Male</p>
                }

                <!-- Display Birthday (if available) -->
                @if (!string.IsNullOrEmpty(Model.Birthday))
                {
                    <p><strong>Birthday:</strong> @Model.Birthday</p>
                }

                <!-- Display Deathday (if available) -->
                @if (!string.IsNullOrEmpty(Model.Deathday))
                {
                    <p><strong>Deathday:</strong> @Model.Deathday</p>
                }

                <!-- Display Known For Department -->
                @if (!string.IsNullOrEmpty(Model.KnownForDepartment))
                {
                    <p><strong>Known For:</strong> @Model.KnownForDepartment</p>
                }

                <!-- Display Biography -->
                <p class="overview">@Model.Biography</p>
            </div>
        </div>
    </div>
</body>
</html>

