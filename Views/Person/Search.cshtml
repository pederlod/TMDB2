@model PersonList

<h2 class="searchResultHeader">People</h2>

<!-- TODO trending as default when no search is made -->
<!-- List of people. -->


<div class="container">

    <!-- Pagination controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link arrow-link @(Model.CurrentPage == 1 ? "disabled-link" : "")"
                   href="@(Model.CurrentPage > 1 ? Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage - 1 }) : "#")">&lt;</a>
            </li>
            <li class="page-item disabled">
                <span class="page-link page-text">Page @Model.CurrentPage of @Model.TotalPages</span>
            </li>
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link arrow-link @(Model.CurrentPage == Model.TotalPages ? "disabled-link" : "")"
                   href="@(Model.CurrentPage < Model.TotalPages ? Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage + 1 }) : "#")">&gt;</a>
            </li>
        </ul>
    </nav>

    <div class="row">
        @if (Model.People == null)
        {
            <p>Model is null.</p>
        }
        else if (Model.People.Count == 0)
        {
            <p>No items found.</p>
        }
        else
        {
            @foreach (var item in Model.People)
            {
                <div class="col-md-3 mb-4">

                    <a href="/Person/Index?personId=@item.Id">
                        <!--<a href="@@Url.Action("Index", "Person", new { personId = Person.Id })">-->
                    <div class="card">

                        <img src="https://image.tmdb.org/t/p/w500/@item.ProfilePath" class="card-img-top" onerror="this.onerror=null; this.src='https://img.freepik.com/premium-vector/default-avatar-profile-icon-social-media-user-image-gray-avatar-icon-blank-profile-silhouette-vector-illustration_561158-3396.jpg';">
                        <div class="card-body">

                                <h5 class="card-name">

                                    @item.Name

                                </h5>
                           
                        </div>
                    </div>
                    </a>
                </div>
            }
        }
    </div>
    <!-- Pagination controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link arrow-link @(Model.CurrentPage == 1 ? "disabled-link" : "")"
                   href="@(Model.CurrentPage > 1 ? Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage - 1 }) : "#")">&lt;</a>
            </li>
            <li class="page-item disabled">
                <span class="page-link page-text">Page @Model.CurrentPage of @Model.TotalPages</span>
            </li>
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link arrow-link @(Model.CurrentPage == Model.TotalPages ? "disabled-link" : "")"
                   href="@(Model.CurrentPage < Model.TotalPages ? Url.Action("Search", new { query = Context.Request.Query["query"], page = Model.CurrentPage + 1 }) : "#")">&gt;</a>
            </li>
        </ul>
    </nav>
</div>
